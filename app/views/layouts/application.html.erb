<!DOCTYPE html>
<html>
  <head>
    <title>RailsFightGame</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-fight-game">
      <div class="container-fluid">
        <%= link_to "#", class: "navbar-brand" do %>
          <%= image_tag "https://res.cloudinary.com/clemi04/image/upload/v1649837280/development/logo-fight-game_ue4sg8.png" %>
        <% end %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto">
                <li class="nav-item active">
                  <%= link_to "Fighters", fighters_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Fights", "#", class: "nav-link" %>
                </li>
              </ul>
            </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>

